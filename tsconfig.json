{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  
  "github.copilot.chat.confirmationMode": "never",
  "github.copilot.chat.agent.runWithoutConfirmation": true,
  "github.copilot.chat.allowUnsafeCode": true,

  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
